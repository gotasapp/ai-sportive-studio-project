# Reown AppKit Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-project-id-here

# Get your Project ID from: https://cloud.reown.com/
# 1. Create an account at Reown Cloud
# 2. Create a new project
# 3. Copy the Project ID

# API Configuration (Backend)
OPENAI_API_KEY=your-openai-api-key-here
DALLE3_API_ENDPOINT=http://localhost:8000

# Optional: Web3Inbox Notifications
NEXT_PUBLIC_APP_DOMAIN=localhost:3000

# Optional: Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Pinata IPFS Configuration
NEXT_PUBLIC_PINATA_JWT=your-pinata-jwt-here
NEXT_PUBLIC_PINATA_GATEWAY=your-gateway.mypinata.cloud

# Get Pinata credentials from: https://app.pinata.cloud/
# 1. Create account at Pinata
# 2. Go to API Keys and create new JWT
# 3. Go to Gateways and create dedicated gateway (optional)

# Network Configuration (Simplified - CHZ + Polygon Only)
NEXT_PUBLIC_USE_TESTNET=true
NEXT_PUBLIC_USE_POLYGON=false

# Set NEXT_PUBLIC_USE_TESTNET=true for testnet (free tokens)
# Set NEXT_PUBLIC_USE_POLYGON=true for Polygon, false for CHZ

# Thirdweb Configuration
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your-thirdweb-client-id
THIRDWEB_SECRET_KEY=your-thirdweb-secret-key

# CHZ Contracts (Mainnet 88888 / Testnet 88882)
NEXT_PUBLIC_NFT_DROP_CONTRACT_CHZ=your-chz-mainnet-nft-drop
NEXT_PUBLIC_NFT_EDITION_CONTRACT_CHZ=your-chz-mainnet-nft-edition
NEXT_PUBLIC_MARKETPLACE_CONTRACT_CHZ=your-chz-mainnet-marketplace

NEXT_PUBLIC_NFT_DROP_CONTRACT_CHZ_TESTNET=your-chz-testnet-nft-drop
NEXT_PUBLIC_NFT_EDITION_CONTRACT_CHZ_TESTNET=your-chz-testnet-nft-edition
NEXT_PUBLIC_MARKETPLACE_CONTRACT_CHZ_TESTNET=your-chz-testnet-marketplace

# Polygon Contracts (Mainnet 137 / Testnet 80002)
NEXT_PUBLIC_NFT_DROP_CONTRACT_POLYGON=your-polygon-mainnet-nft-drop
NEXT_PUBLIC_NFT_EDITION_CONTRACT_POLYGON=your-polygon-mainnet-nft-edition
NEXT_PUBLIC_MARKETPLACE_CONTRACT_POLYGON=your-polygon-mainnet-marketplace

NEXT_PUBLIC_NFT_DROP_CONTRACT_POLYGON_TESTNET=your-polygon-testnet-nft-drop
NEXT_PUBLIC_NFT_EDITION_CONTRACT_POLYGON_TESTNET=your-polygon-testnet-nft-edition
NEXT_PUBLIC_MARKETPLACE_CONTRACT_POLYGON_TESTNET=your-polygon-testnet-marketplace

# Simplified Configuration - Only CHZ and Polygon supported
# No more Ethereum, Base or fallback contracts needed

# Get Thirdweb credentials from: https://thirdweb.com/dashboard
# 1. Create account at Thirdweb
# 2. Create new project and get Client ID
# 3. Deploy contracts via Thirdweb Dashboard

# Testnet Faucets (Free Tokens):
# CHZ Spicy Testnet: https://faucet.chiliz.com
# Polygon Amoy Testnet: https://faucet.polygon.technology
# 
# Switch between networks:
# NEXT_PUBLIC_USE_POLYGON=false (CHZ) or true (Polygon)
# NEXT_PUBLIC_USE_TESTNET=true (testnet with free tokens)

